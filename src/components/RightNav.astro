---
import SubNavItem from "../components/SubNavItem.astro";
const { items = [] } = Astro.props;
---

<div class="right-nav">
    <h3>Assorted Inspirations</h3>
    <ul>
        {items.map(item =>
                <div class="horizontal-divider-container">
                    <div class="horizontal-divider"></div>
                </div>
                <SubNavItem {...item}/>
        )}
    </ul>
    <div class="horizontal-divider-container">
        <div class="horizontal-divider"></div>
    </div>
</div>

<style>
    .right-nav {
        display: flex;
        align-items: center;
        flex-direction: column;
        height: 100%;
        text-align: center;
        overflow: scroll;
        scrollbar-width: none;
        -ms-overflow-style: none;
    }

    .horizontal-divider-container {
        width: 100%;
        display: flex;
        position: relative;
        z-index: 10;
        padding: 1rem 0;
    }

    .horizontal-divider {
        width: 100%;
        border-top: 2px dashed;
        margin: 0.5rem 0;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>