---
import "../styles/global.css";
import "../styles/fonts.css";
import { ClientRouter } from "astro:transitions";
import TerminalBox from "../components/TerminalBox.astro";
import LeftNav from "../components/LeftNav.astro";
import RightNav from "../components/RightNav.astro";
import * as rightNavItems from "../data/rightnav.ts";
import * as navData from "../data/leftnav";

const { pageTitle, decorTitle = "" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>spoonmilk - {pageTitle}</title>
    <ClientRouter />
    <script is:inline>
    let savedScroll = 0;

    // Before the DOM swap, record where the sidebar was scrolled to
    document.addEventListener('astro:before-swap', () => {
      const sidebar = document.getElementById('right-sidebar');
      if (sidebar) savedScroll = sidebar.scrollTop;
    });

    // After the new page is swapped in, reset its scroll position
    document.addEventListener('astro:after-swap', () => {
      const sidebar = document.getElementById('right-sidebar');
      if (sidebar) sidebar.scrollTop = savedScroll;
    });
  </script>
  </head>
  <body>
    <div class="layout">
      <aside class="sidebar" transition:persist>
        <TerminalBox />
        <LeftNav
          pages={navData.pages}
          blogs={navData.blogs}
          links={navData.links}
        />
      </aside>
      <div class="main-area">
        <div class="content-container">
          <h1>{pageTitle}</h1>
          <h2>{decorTitle}</h2>
          <main class="content">
            <slot />
          </main>
        </div>
      </div>
      <aside id="right-sidebar" class="sidebar" transition:persist>
        <RightNav items={rightNavItems.inspirations} />
      </aside>
    </div>
  </body>
</html>

<style>
  :root {
    --sidebar-width: 350px;
  }

  .layout {
    display: flex;
    height: 100vh;
  }

  .sidebar {
    width: var(--sidebar-width);
    flex-shrink: 0;
    border-right: 1px solid;
    border-left: 1px solid;
    padding: 1rem;
    overflow-y: auto;
  }

  .main-area {
    flex: 1;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .content-container {
    width: clamp(400px, 60%, 800px);
    padding: 4rem;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
</style>
